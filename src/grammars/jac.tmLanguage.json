{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jac",
  "scopeName": "source.jac",
  "fileTypes": ["jac"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.jac",
          "begin": "#\\*",
          "end": "\\*#"
        },
        {
          "name": "comment.line.number-sign.jac",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.double.jac",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [{ "include": "#string-escapes" }]
        },
        {
          "name": "string.quoted.triple.single.jac",
          "begin": "'''",
          "end": "'''",
          "patterns": [{ "include": "#string-escapes" }]
        },
        {
          "name": "string.quoted.double.jac",
          "begin": "\"",
          "end": "\"",
          "patterns": [{ "include": "#string-escapes" }]
        },
        {
          "name": "string.quoted.single.jac",
          "begin": "'",
          "end": "'",
          "patterns": [{ "include": "#string-escapes" }]
        },
        {
          "name": "string.quoted.f-string.jac",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escapes" },
            {
              "name": "meta.interpolation.jac",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.jac",
          "match": "\\\\(?:[abfnrtv\\\\\"']|x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.jac",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?[jJ]?\\b"
        },
        {
          "name": "constant.numeric.hex.jac",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.jac",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.binary.jac",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.jac",
          "match": "\\b\\d+[jJ]?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jac",
          "match": "\\b(import|include|from|as|if|else|elif|while|for|in|match|case|return|break|continue|spawn|ignore|visit|disengage|entry|exit|pass|try|except|finally|raise|assert|async|await|lambda|by|to|del|check)\\b"
        },
        {
          "name": "keyword.other.variable.jac",
          "match": "\\b(has|glob|let)\\b"
        },
        {
          "name": "keyword.operator.logical.jac",
          "match": "\\b(and|or|not|is|is\\s+not|not\\s+in)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.jac",
          "match": "\\b(class|node|edge|walker|enum|obj|test)\\b"
        },
        {
          "name": "support.type.jac",
          "match": "\\b(str|int|float|list|tuple|set|dict|bool|bytes|any|type)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(can|def|impl|with)\\s+([a-zA-Z_]\\w*)",
          "captures": {
            "1": { "name": "keyword.declaration.function.jac" },
            "2": { "name": "entity.name.function.jac" }
          }
        },
        {
          "name": "keyword.declaration.function.jac",
          "match": "\\b(can|def|impl|with)\\b"
        },
        {
          "match": "([a-zA-Z_]\\w*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.call.jac" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.jac",
          "match": "\\b(True|False|None)\\b"
        },
        {
          "name": "variable.language.jac",
          "match": "\\b(self|here|root)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.jac",
          "match": "(\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|\\*\\*=|=)"
        },
        {
          "name": "keyword.operator.arithmetic.jac",
          "match": "(\\*\\*|//|[+\\-*/%@])"
        },
        {
          "name": "keyword.operator.comparison.jac",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.bitwise.jac",
          "match": "(<<|>>|&|\\||\\^|~)"
        },
        {
          "name": "keyword.operator.arrow.jac",
          "match": "(-->|<--|\\+\\+>|<\\+\\+|:>|<:|::>|<::)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.jac",
          "match": "\\b[a-zA-Z_]\\w*\\b"
        }
      ]
    }
  }
}
